@model List<GestaoNotas.Models.ViewModel.alunoViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="my-3">
        Alunos cadastrados:
    </div>
    <section class="grid grid-Card">
        @for (int i = 0;i < Model.Count(); i++)
        {
            <div class="border container-card">
                <div class="container">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-user-circle img"></i>
                        </div>    
                        <div class="col-9">
                            <div class="row">
                                <div class="col">
                                    <span class="fw-bold">
                                        @Html.DisplayFor(modelItem => modelItem[i].Nome)
                                    </span>
                                </div>                     
                            </div>       
                            <div class="row">
                                <div class="col">
                                    <span class="bold">
                                         @Html.DisplayFor(modelItem => modelItem[i].Email)
                                    </span>
                                </div>                     
                            </div>             
                            <div class="row">
                                <div class="col">
                                    <span class="bold">
                                        @Html.DisplayFor(modelItem => modelItem[i].Campus)

                                    </span>
                                </div>                     
                            </div>         
                            <div class="row">
                                <div class="col">
                                    <span class="bold">
                                        @Html.DisplayFor(modelItem => modelItem[i].Nome)
                                    </span>
                                </div>                     
                            </div>               
                            <div class="row">
                                <div class="col">
                                    <span class="bold">
                                        RA: 0000001
                                    </span>
                                </div>                     
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </section>
</div>
<style>
    .grid {
      display: grid;
      padding: 2em;
      counter-reset: grid-items;
      position: relative;
    }

    .grid::before {
      position: absolute;
      padding-left: 3em;
      content: attr(data-keyword);
    }
    .grid-Card{
        grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
        
        grid-gap: 9px;

        grid-auto-flow: column;
    }
    .container-card{
        background-color: white;
        border-width: 0px 0px 0px 3px !important;
        border-color: purple !important;
        border-radius: 5px;
    }
    .img{
        font-size:3rem;
    }


</style>