@model List<GestaoNotas.Models.ViewModel.TurmaViewModel>

<div class="container my-3">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Turma</th>
                    <th scope="col">Coordenador</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <th scope="row">
                            @Html.DisplayFor(modelItem => modelItem[i].IdTurma);
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem[i].Descricao);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem[i].Coordenador);
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>