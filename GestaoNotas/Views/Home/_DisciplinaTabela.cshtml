@model List<GestaoNotas.Models.ViewModel.DisciplicaViewModel>

<div class="container my-3">
    <div class="my-3">
        Cadastradas
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Disciplina</th>
                    <th scope="col">Data Avaliação</th>
                    <th scope="col">Turma</th>
                    <th scope="col">Professor</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <th scope="row">
                            @Html.DisplayFor(modelItem => modelItem[i].IdDiciplina);
                        </th>
                        <td>            
                            @Html.DisplayFor(modelItem => modelItem[i].NomeDisciplina);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem[i].DataAvaliacao);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem[i].Descricao);
                        </td>                      
                        <td>
                            @Html.DisplayFor(modelItem => modelItem[i].Nome);
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>