@model GestaoNotas.Models.ViewModel.AddTurmaAlunoViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container-fluid">
    <div class="row">
        <form>
            <div class="mb-3">
                @Html.HiddenFor(model => model.IdAluno, new{@class="",data_test="IdAluno"})
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.Descricao, new {@class ="form-label", data_test="Descricao"})
                @Html.DropDownListFor(model => model.IdTurma, null,"",new{@class="form-select", data_test="IdTurma"})
            </div>
            <div class="btn btn-primary" id="addTurma">Add Turma</div>
        </form> 
    </div>
</div>
